{
    "extends": "@react-native/typescript-config",
    "compilerOptions": {
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "nativewind",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ],
    "exclude": ["**/node_modules", "**/Pods"]
}
